{% extends "layout.html.twig" %}

{% block title %}
	{{ product.title }}
{% endblock %}

{% block content %}
	<div class="row div-show-produit d-flex justify-content-center align-items-center">
		<div class="col-md-10">
			<div class="card">
				<div class="row mb-5">
					<div class="col-md-6">
						<div class="images p-3">
							<div class="text-center p-4">
								<img id="img-fluid" src="{{ asset('photos/product/' ~ product.photo) }}" width="250"/>
							</div>
						</div>
					</div>
					<div class="col-md-6">
						<div class="product p-4">
							<div
								class="d-flex justify-content-between align-items-center">
								{# <div class="d-flex align-items-center">
																																									<i class="fa fa-long-arrow-left"></i>
																																									<span class="ml-1">Back</span>
																																								</div> #}
								<i class="fa fa-shopping-cart text-muted"></i>
							</div>
							<div class="mt-4 mb-3">

								<h5 class="text-uppercase">{{ product.title}}
								</h5>
								<div class="price d-flex flex-row align-items-center">
									<span class="act-price">{{ product.price}}â‚¬</span>
								</div>
							</div>
						</div>
						<p class="about">
							{{ product.description}}
						</p>
						<div class="sizes mt-5 text-center">
							<h6 class="text-uppercase">taille :
								{{ product.size}}</h6>
							<h6 class="text-uppercase">Couleur :
								{{ product.color}}</h6>
							<h6 class="text-uppercase">Il en reste
								{{ product.stock}}</h6>
						</div>
						<div class="cart mt-4 align-items-center text-center">
							<a href="{{ path('app_basket_add', {id: product.id}) }}">
								<button class="btn btn-success text-uppercase mr-2 px-4">
									Add to Basket
								</button>
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}

{% extends 'layout.html.twig' %}

{% block title %}Home
{% endblock %}

{% block content %}
	{% include "home/home.html.twig" %}
	<div class="text-center mb-5">
		<h1>Bienvenue sur notre Produits</h1>
		{% for product in products %}
			<div class="justify-content-center">
				<div class="justify-content-center">
					<div class="row justify-content-center">
						<div class="col card mb-3 pl-0 rounded" style="max-width: 800px;">
							<div class="row">
								<div class="col-md-6 p-0 m-0">
									<img src="{{ asset('photos/product/' ~ product.photo) }}" class="img-fluid rounded" alt="{{ product.title }}">
								</div>
								<div class="col-md-6">
									<div class="card-body text-center">
										<h4 class="card-title">
											<a class="text-decoration-none text-success" href="{{ path('app_product_show', {id: product.id}) }}">{{ product.title}}</a>
										</h4>
										<h5>color :
											{{ product.color}}</h5>
										<h5>title :
											{{ product.title}}</h5>
										<h5>product
											{{ product.stock }}
											in stock</h5>
										<h5>price :
											<strong>{{product.price }}â‚¬</strong>
										</h5>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>

{% endblock %}
